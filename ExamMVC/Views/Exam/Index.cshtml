
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Exam Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="/css/docs.css" rel="stylesheet" />
    <script src="/Scripts/jquery-3.3.1.js" type="text/javascript"></script>
    <script src="/Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    <script type="text/javascript" src="/Scripts/dataTables.rowsGroup.js"></script>
    <script type="text/javascript" src="/Scripts/dataTables*"></script>
    <script type="text/javascript" src="/Scripts/jquery.dataTables.js"></script>
    <script type="text/javascript" src="/Scripts/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/js/Exam.js"></script>

    <style type="text/css">
        .tg {
            border-collapse: collapse;
            border-spacing: 0;
        }

        .tg td {
            font-family: Arial, sans-serif;
            font-size: 9px;
            padding: 1px 5px;
            border-style: solid;
            border-width: 1px;
            overflow: hidden;
            word-break: normal;
            border-color: black;
        }

        .tg th {
            font-family: Arial, sans-serif;
            font-size: 9px;
            font-weight: normal;
            padding: 1px 5px;
            border-style: solid;
            border-width: 1px;
            overflow: hidden;
            word-break: normal;
            border-color: black;
        }

        .tg .tg-yw4l {
            vertical-align: top
        }

        th, td {
            white-space: nowrap; /*欄位內不換行*/
        }
    </style>
</head>
<body>
    <div style="margin:0px 0px 0px 0px;">
        <table border="0" align="center" cellpadding="4" cellspacing="1" width="70%">
            <tr>
                <td valign="top" align="center">
                    <font style="color:blue;font-weight:bold;font-size:12pt;">Orders Info</font>
                </td>
            </tr>
        </table>
    </div>

    <div class="Head_box" id="dvHead" name="dvHead">
        <table border="0" width="80%">
            <tr>
                <td valign="top" align="right" style="font-size:10pt;">
                    OrderID
                </td>
                <td valign="top">
                    <input type="text" id="txtOrderID" style="font-size:10pt;">
                </td>
                @*<td width="20px"></td>*@
                <td valign="top" align="right" style="font-size:10pt;">
                    OrderDate
                </td>
                <td valign="top">
                    <input type="text" id="txtOrderDate" style="font-size:10pt;" readonly="readonly">
                </td>
            </tr>
            <tr>
                <td valign="top" align="right" style="font-size:10pt;">
                    CustomerID
                </td>
                <td valign="top">
                    <input type="text" id="txtCustomerID" style="font-size:10pt;" readonly="readonly">
                </td>
                @*<td width="20px"></td>*@
                <td valign="top" align="right" style="font-size:10pt;">
                    EmployeeID
                </td>
                <td valign="top">
                    <input type="text" id="txtEmployeeID" style="font-size:10pt;" readonly="readonly">
                </td>
            </tr>
            <tr>
                <td valign="top" align="right" style="font-size:10pt;">
                    ShipName
                </td>
                <td valign="top" colspan="4">
                    <input type="text" id="txtShipName" style="font-size:10pt;" readonly="readonly">
                </td>
            </tr>
            <tr>
                <td valign="top" align="right" style="font-size:10pt;">
                    ShipAddress
                </td>
                <td valign="top" colspan="4">
                    <input type="text" id="txtShipAddress" style="font-size:10pt;" readonly="readonly">
                    <input type="button" id="btnSubmit" style="width:100px;" value="查詢">
                </td>
            </tr>
        </table>
    </div>

    <div style="width:800px;float:left;">
        <table class="tg" id="tableItem" style="width:100%">
            <thead>
                <tr>
                    <th style="vertical-align: top; text-align:center; background-color:#4F9D9D; color:white;">
                        ProductID
                    </th>
                    <th style="vertical-align: top; text-align:center; background-color:#4F9D9D; color:white;">
                        UnitPrice
                    </th>
                    <th style="vertical-align: top; text-align:center; background-color:#4F9D9D; color:white;">
                        Quantity
                    </th>
                    <th style="vertical-align: top; text-align:center; background-color:#4F9D9D; color:white;">
                        Discount
                    </th>
                    <th style="vertical-align: middle; text-align:left; background-color:#4F9D9D; color:white;font-size:9pt;">

                    </th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <div id="ExamDialog" title="Orders Detail">
        <div style="margin: 20px 20px 20px 20px;">
            <table width="50%" border="0" style="vertical-align:central;text-align:center;">
                <tr>
                    <td valign="top" align="right" style="font-size:10pt;font-weight:bold;">
                        OrderID
                    </td>
                    <td style="text-align:left;">
                        <input type="text" id="txtOrderIDDialog" name="txtOrderIDDialog" style="font-size:10pt;margin-bottom:10px;" readonly="readonly" />
                    </td>
                </tr>
                <tr>
                    <td valign="top" align="right" style="font-size:10pt;font-weight:bold;">
                        ProductID
                    </td>
                    <td style="text-align:left;">
                        <input type="text" id="txtProductIDDialog" name="txtProductIDDialog" style="font-size:10pt; width:300px;margin-bottom:15px;" readonly="readonly" />
                    </td>
                </tr>
                <tr>
                    <td valign="top" align="right" style="font-size:10pt;font-weight:bold;">
                        UnitPrice
                    </td>
                    <td style="text-align:left;">
                        <input type="text" id="txtUnitPriceDialog" name="txtUnitPriceDialog" style="font-size:10pt; width:300px;margin-bottom:15px;" />
                    </td>
                </tr>
                <tr>
                    <td valign="top" align="right" style="font-size:10pt;font-weight:bold;">
                        Quantity
                    </td>
                    <td style="text-align:left;">
                        <input type="text" id="txtQuantityDialog" name="txtQuantityDialog" style="font-size:10pt; width:300px;margin-bottom:15px;" />
                    </td>
                </tr>
                <tr>
                    <td valign="top" align="right" style="font-size:10pt;font-weight:bold;">
                        Discount
                    </td>
                    <td style="text-align:left;">
                        <input type="text" id="txtDiscountDialog" name="txtDiscountDialog" style="font-size:10pt; width:300px;margin-bottom:15px;" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>

